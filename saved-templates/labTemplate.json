{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the resources"
      }
    },
    "workspaceName": {
      "type": "string",
      "defaultValue": "sentinel-log-analytics",
      "metadata": {
        "description": "Name of the Log Analytics workspace"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "PerGB2018",
      "allowedValues": ["PerGB2018"],
      "metadata": {
        "description": "Pricing tier for the Log Analytics workspace"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2020-08-01",
      "name": "[parameters('workspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "[parameters('sku')]"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces/providers/onboardingStates",
      "apiVersion": "2021-03-01-preview",
      "name": "[concat(parameters('workspaceName'),'/Microsoft.SecurityInsights/default')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]"
      ],
      "properties": {
        "state": "enabled"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "TrainingSolutionDeployment",
      "dependsOn": [
        "[concat(resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspaceName')), '/providers/Microsoft.SecurityInsights/onboardingStates/default')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/techrupt-digital/microsoft-sentinel-lab/refs/heads/main/Artifacts/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "workspaceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]"
    }
  }
}
